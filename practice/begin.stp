global count

probe begin
	{
		printf ("Begin stript\n")
	}

# printing timer statement every 3 sec

probe timer.s(3)
        {
		if (count == 3)
			exit ()
		else
			print("\ncounter ~> ", count)
			count ++
        }

probe end
        {
                printf ("\nEnd script")
        }


